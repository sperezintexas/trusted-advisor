# Copy to .env at repo root and set values. Do not commit .env.
# Both backend (Spring Boot) and frontend (Next.js) read this file.
# Next loads it via next.config.mjs (path ../.env). Backend loads it in App.kt when you run ./gradlew bootRun (workingDir=root).

# ---------- Localhost: backend 8080, frontend 3000 ----------
# Backend: ./gradlew bootRun   (from repo root)
# Frontend: cd frontend && npm run dev
# Required for local: AUTH_SECRET, NEXT_PUBLIC_BACKEND_URL

# MongoDB: use MONGODB_URI_B64 (preferred) or MONGODB_URI. Database name from MONGODB_DATABASE (not from URI).
# Encode: echo -n "mongodb+srv://user:pass@cluster.mongodb.net" | base64
# MONGODB_URI=mongodb://localhost:27017/trusted-advisor
MONGODB_URI_B64=
MONGODB_DATABASE=trusted-advisor
XAI_API_KEY=

# =============================================================================
# API key auth (replaces X OAuth2)
# =============================================================================
# Shared secret: frontend sends it as X-API-Key (or Authorization: Bearer) on every request.
# Set a strong random value (e.g. openssl rand -hex 32). User enters this on the login page.
AUTH_SECRET=

# Localhost: frontend uses NEXT_PUBLIC_BACKEND_URL for API base.
NEXT_PUBLIC_BACKEND_URL=http://localhost:8080

# CLI test (repo root): node scripts/test-env.mjs â€” loads .env, tests xAI if XAI_API_KEY set.
# Debug: set AUTH_DEBUG=true (backend) and NEXT_PUBLIC_AUTH_DEBUG=true (frontend), restart; logs [auth] to console (local only)
AUTH_DEBUG=false
NEXT_PUBLIC_AUTH_DEBUG=false
